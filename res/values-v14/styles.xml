<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowBackground">@drawable/bluegradient</item>
        <item name="android:actionBarStyle">@style/ActionBarBackground</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>
    
    <style name="ActionBarBackground" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/orangegradient</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>
    
    <style name="SpinnerItem" parent="@android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>
    
    <style name="SpinnerItemText" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>
     
    <style name="ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    

</resources>